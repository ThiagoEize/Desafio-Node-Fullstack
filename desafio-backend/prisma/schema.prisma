datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Place {
  id       Int      @id @default(autoincrement())
  name     String
  address  String
  city     String
  state    String
  updates  DateTime @updatedAt
  events   Event[]
  gates    Gate[]
  turnstiles Turnstile[]

  @@map("places")
}

model Event {
  id        Int      @id @default(autoincrement())
  placeId   Int
  event     String
  type      String
  dateStart DateTime
  dateEnd   DateTime
  place     Place    @relation(fields: [placeId], references: [id])

  @@index([placeId])
  @@map("events")
}


model Gate {
  id       Int      @id @default(autoincrement())
  name     String
  placeId  Int 
  place    Place    @relation(fields: [placeId], references: [id])

  @@index([placeId])
  @@map("gates")
}

model Turnstile {
  id       Int      @id @default(autoincrement())
  name     String
  placeId  Int 
  place    Place    @relation(fields: [placeId], references: [id])

  @@index([placeId])
  @@map("turnstiles")
}
