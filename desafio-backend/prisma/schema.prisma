datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model Place {
  id       Int      @id @default(autoincrement())
  name     String
  address  String
  city     String
  state    String
  updates  DateTime @updatedAt
  events   Event[]
  gates    Gate[]

  @@map("places")
}

model Event {
  id       Int      @id @default(autoincrement())
  placeId  Int
  evento   String
  type     String
  date     DateTime
  place    Place    @relation(fields: [placeId], references: [id])

  @@index([placeId])
  @@map("events")
}

model Gate {
  id       Int      @id @default(autoincrement())
  name     String
  placeId  Int 
  place    Place    @relation(fields: [placeId], references: [id])

  @@index([placeId])
  @@map("gates")
}
